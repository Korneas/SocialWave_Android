<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_log"
    android:background="@drawable/bg_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.camilomontoya.socialwave_android.LogActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:layout_marginTop="16dp"
        android:id="@+id/imageView3"
        android:scaleType="fitCenter"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="278dp"
        android:layout_alignParentBottom="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textColorHint="@color/colorBgDark"
        android:backgroundTint="@color/colorAccent"
        android:id="@+id/user_in"
        android:hint="Usuario"
        android:textColor="@color/colorBg"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ingreso_button"
        android:id="@+id/ingreso"
        android:background="#00000000"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="41dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/colorBg"
        android:textColorHint="@color/colorBgDark"
        android:backgroundTint="@color/colorAccent"
        android:id="@+id/pass_in"
        android:hint="ContraseÃ±a"
        android:layout_below="@+id/user_in"
        android:layout_alignStart="@+id/user_in"
        android:layout_marginTop="23dp"
        android:inputType="textPassword" />
</RelativeLayout>
