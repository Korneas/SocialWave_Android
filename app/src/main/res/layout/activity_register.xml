<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:background="@drawable/bg_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.camilomontoya.socialwave_android.RegisterActivity">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/register_button"
        android:id="@+id/reg_envio"
        android:background="#00000000"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:layout_marginTop="16dp"
        android:id="@+id/imageView"
        android:scaleType="fitCenter"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="278dp"
        android:layout_alignParentBottom="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textColorHint="@color/colorBgDark"
        android:backgroundTint="@color/colorAccent"
        android:id="@+id/name_reg"
        android:hint="Usuario"
        android:textColor="@color/colorBg"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textColor="@color/colorBg"
        android:textColorHint="@color/colorBgDark"
        android:backgroundTint="@color/colorAccent"
        android:id="@+id/password_1"
        android:hint="Contraseña"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/name_reg"
        android:layout_alignStart="@+id/name_reg" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:textColorHint="@color/colorBgDark"
        android:backgroundTint="@color/colorAccent"
        android:id="@+id/correo"
        android:hint="Correo"
        android:textColor="@color/colorBg"
        android:layout_below="@+id/password_2"
        android:layout_alignStart="@+id/password_2"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textColorHint="@color/colorBgDark"
        android:backgroundTint="@color/colorAccent"
        android:id="@+id/password_2"
        android:hint="Confirmar contraseña"
        android:textColor="@color/colorBg"
        android:layout_below="@+id/password_1"
        android:layout_alignStart="@+id/password_1"
        android:layout_marginTop="13dp" />

</RelativeLayout>
